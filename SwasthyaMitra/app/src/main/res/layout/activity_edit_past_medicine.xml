<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/regback"
    tools:context=".EditPastMedicineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:background="@drawable/glass_morph"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Past Medicine"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medication Name"
            />

        <EditText
            android:id="@+id/EdeditTextMedicationNameP"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="10dp"
            android:hint="@string/enter_medication_name"
            android:inputType="text"
            android:background="@drawable/input_bg"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosage" />

        <EditText
            android:id="@+id/EdeditTextDosageP"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="10dp"
            android:hint="@string/enter_dosage"
            android:inputType="text"
            android:background="@drawable/input_bg"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequency" />

        <EditText
            android:id="@+id/ededitTextFrequencyPM"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="10dp"
            android:hint="How many times a day"
            android:background="@drawable/input_bg"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule" />

        <EditText
            android:id="@+id/ededitTextSchedulePM"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="10dp"
            android:hint="When you Take medicine eg. night"
            android:background="@drawable/input_bg"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date" />

        <EditText
            android:id="@+id/EdeditTextStartDateP"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="10dp"
            android:hint="@string/select_start_date"
            android:background="@drawable/input_bg"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date" />

        <EditText
            android:id="@+id/EdeditTextEndDateP"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="10dp"
            android:hint="@string/select_end_date"
            android:background="@drawable/input_bg"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes" />

        <EditText
            android:id="@+id/EdeditTextNotesP"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:paddingStart="10dp"
            android:hint="@string/enter_notes"
            android:inputType="textMultiLine"
            android:background="@drawable/input_bg"
            />

        <Button
            android:id="@+id/buttonUpdateP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</RelativeLayout>
