<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicationManagementActivity"
    android:background="@drawable/regback">

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="16dp"
        android:layout_gravity="center"
        android:background="@drawable/glass_morph">


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/Prescriptionsbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/prescription"
                android:scaleType="fitCenter"
                android:contentDescription="Prescriptions"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prescriptions"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/MedicineRemindersbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/medicinereminders"
                android:scaleType="fitCenter"
                android:textColor="@color/black"
                android:contentDescription="Medicine reminders"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_reminders"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>

        <!-- Doctors and Appointments -->
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/MedicineInventoryTrackerbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/inventory"
                android:scaleType="fitCenter"
                android:contentDescription="Medicine Inventory Tracker"
                tools:ignore="HardcodedText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_inventory_tracker"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/StockAlertbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/stock_alert"
                android:scaleType="fitCenter"
                android:contentDescription="Stock Alert"
                tools:ignore="HardcodedText,ImageContrastCheck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stock_alert"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>

    </GridLayout>

</RelativeLayout>
